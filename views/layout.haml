!!! 5
%html
  %head
    %meta{ :charset => "utf-8" }
    %meta{ :name => "description", :content => "Montreal (Canada) Javascript User Group"}
    %meta{ :name => "keywords", :content => "montreal,javascript,js,usergroup,user group"}
    %link{ :href => "css/bootstrap/bootstrap-1.2.0.min.css",
           :rel => "stylesheet", :type => "text/css" }
    %link(rel="stylesheet/less" href="/css/js-mtl.less")
    %script(src="src/less-1.1.3.min.js" type="text/javascript")
    %script(src="src/jquery-1.5.min.js" type="text/javascript")
    %script(src="src/js-mtl.js" type="text/javascript")

    %meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes")
    %title js-montreal : JavaScript User Group in Montreal, Quebec
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-2161575-2']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script');
        ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www')
               + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(ga, s);
      })();
  %body(class="#{@section}")
    .topbar
      .topbar-inner
        .container
          %h3
            %a(href="/")JS-MONTREAL
          %ul.nav
            = menu(@section)
  %header
    .container
      .row
        .span12.columns
          %p Montr&eacute;al JavaScript User Group
          %h1 JS-MONTREAL.ORG
        .span4.columns
          %a(href="http://twitter.com/jsmontreal" class="twitter-follow-button" data-button="grey" data-text-color="#FFFFFF" data-link-color="#00AEFF" data-show-count="false")Follow @jsmontreal
          %script(src="http://platform.twitter.com/widgets.js" type="text/javascript")

          %p.attention
            - if past?(meetup)
              Our last meetup happened on
            - else
              Our next meetup is happening on
            %em #{Date.parse( meetup["on"] ).strftime("%A, %B %d")} @ 18:45
            %br<
            - if past?(meetup)
              Register at
              %a{ :href => "http://js-montreal.eventbrite.com", :target => "_new" }Eventbrite
              and you will be notified of our next event.
            - else
              Find out all the details and register at
              %a{ :href => "http://js-montreal.eventbrite.com", :target => "_new" }Eventbrite
  #content.container
    = yield
  %footer
    .container
      .row
        .span4
          %h3 Contact
          %ul.unstyled
            - @links["contact"].each do |l|
              %li
                %a{ :href => l["href"]}<
                  =l["label"]

        .span4
          %h3 User Groups
          %ul.unstyled
            - @links["friends"].each do |l|
              %li
                %a{ :href => l["href"]}<
                  =l["label"]
        .span4
          %h3 Special thanks
          %ul.unstyled
            %li
              %a(href="http://cakemail.com")Cakemail
            %li
              %a(href="http://crim.ca")CRIM
            %li
              %a(href="http://bloomdigital.com")Bloom Digital
          %p for graciously offering us a space to hold our meetups.

        .span4
          %h3
            %a(href="http://js-montreal.org")JS-MONTREAL.ORG
          %p
            &copy; 2011.  Powered by
            %a(href="http://sinatrarb.com")<
              Sinatra
            (yes, we love <a href="http://montrealonrails.com">Ruby</a> as well)